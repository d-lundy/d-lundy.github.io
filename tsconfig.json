{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ]
    },
    "strictNullChecks": true,
    "verbatimModuleSyntax": true
  }
}